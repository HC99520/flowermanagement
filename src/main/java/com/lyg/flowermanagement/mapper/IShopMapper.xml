<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lyg.flowermanagement.mapper.IShopMapper">
    <resultMap id="ShopMap" type="com.lyg.flowermanagement.entity.Shop">
        <id property="shopId" column="shop_id"/>
        <result property="name" column="shopName"></result>
        <result property="address" column="address"></result>
    </resultMap>
    <!--查看店铺的id和店铺名称-->
    <select id="findByIdAndName" resultMap="ShopMap">
  	SELECT shop.shop_id,shop.`name` as shopName FROM shop
    </select>
<!--    根据id查-->
    <select id="queryById" resultMap="ShopMap">
  select shop.shop_id,shop.`name` as shopName,shop.address
        from flowermanagement.shop
        where shop_id = #{id}
    </select>
    <!--通过主键修改数据-->
    <update id="update">
        update flowermanagement.shop
        <set>

            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="address!=null and address!=''">
                address=#{address}
            </if>

        </set>
        where shop_id=#{shopId}
    </update>
    <!--通过shopId删除-->
    <delete id="deleteById">
        delete from flowermanagement.shop where shop_id=#{shopId}
    </delete>
    <!--新增所有列-->
    <insert id="insert" keyProperty="shop_id" useGeneratedKeys="true">
        insert into flowermanagement.shop( shop_id,name,address)
        values ( #{shopId},#{name}, #{address})
    </insert>
</mapper>
